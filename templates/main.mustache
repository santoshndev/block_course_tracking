{{!
    @template block_course_tracking/main

    This template renders the main content area for the course tracking block.

    Example context (json):
    {
        "activities": [
            {
                "cmid": 3203,
                "activityname": "Assignment No. 1",
                "link": "https://moodlesite/mod/assign/view.php?id=3203",
                "timecreated": "07-Jul-2022",
                "completionstate": "Completed"
            }
        ]
    }
}}
<div id="block-course-tracking-{{uniqid}}">
    {{#activities}}
        <h6><a href="{{link}}">{{cmid}} - {{activityname}} - {{timecreated}} {{#completionstate}}- {{completionstate}} {{/completionstate}}</a></h6>
    {{/activities}}
    {{^activities}}
        <p class="text-center">{{#str}}noactivities, block_course_tracking{{/str}}</p>
    {{/activities}}
</div>